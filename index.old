        function expand(arg) {
            const expanding = document.getElementById(arg);
            const contentHidden = expanding.querySelector('.content-hidden'); 
            if (contentHidden) {
                if (contentHidden.classList.contains('appear')) {
                    contentHidden.classList.remove('appear');
                } else {
                    contentHidden.classList.add('appear');
                }
            }
        }

        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                navItems.forEach(item => item.classList.remove('active'));
                item.classList.add('active');
            });
        });
        window.onload = function() {    
            var screenWidth = window.innerWidth;
            if (screenWidth > 1650 ){
                document.getElementById('footerVideo').src = "./assets/videos/v8opti8-6.mp4";
                document.getElementById('footerVideo').setAttribute('width', '740px');
            } else {
                document.getElementById('footerVideo').src = "./assets/videos/v8opti4-3.mp4";
                document.getElementById('footerVideo').setAttribute('width', '320px');
                
            } 
        }
        fetch('./activities.json')
        .then(response => response.json())
        .then(data => {
            data.forEach((activity) => {
                
                const activitiesList = document.querySelector('.activities');
                const activityElement = document.createElement('div');
                activityElement.classList.add('activity');
                activityElement.innerHTML = `
                    <i class="fa fa-star ${activity['signal-color']}"></i>
                    <p>${activity.number}</p>
                `;
                activityElement.onclick = function() {
                    handleActivityClick(activity);
                    document.querySelectorAll('.activity').forEach(item => item.classList.remove('selected'));
                    activityElement.classList.add('selected');
                };
                activitiesList.appendChild(activityElement);      
            });
        });

        function handleActivityClick(activity) {
            const activitySelected = document.querySelector('.activity-selected');
            activitySelected.innerHTML = "";
            var screenWidth = window.innerWidth
            if (activity.video !== "" && screenWidth > 1250) {
                activitySelected.innerHTML = `
                    <div class="parcours-container">
                        <div class="parcours-description">
                            <h2 class="parcours-title">Parcours Sélectionné:</h2>
                            <p>Départ: <span>${activity.start}</span></p>
                            <p>Arrivée: <span>${activity.end}</span></p>
                            <p>Distance: <span>${activity.length}</span></p>
                            <p>Temps: <span>${activity.time}</span></p>
                            <p>A partir de: <span>${activity.price}</span></p>
                            <div class="button-container" id="guidap-widget-btn">
                                ${activity.activityBtn}
                            </div>
                        </div>
                        <div class=" card parcours-img">
                            <img class="card-image" src="${activity.map}" alt="image du parcours ${activity.number}" width="auto">
                            <video style="display: none;" width="520px" class="responsive-video card-video" src="${activity.videolg}" title="video de présentation du parcours ${activity.number}"></video>
                        </div>
                    </div>
                `;
                }else if (activity.video !== "" && screenWidth <= 1250) {
                activitySelected.innerHTML = `
                    <div class="parcours-container">
                        <div class="parcours-description">
                            <h2 class="parcours-title">Parcours Sélectionné:</h2>
                            <p>Départ: <span>${activity.start}</span></p>
                            <p>Arrivée: <span>${activity.end}</span></p>
                            <p>Distance: <span>${activity.length}</span></p>
                            <p>Temps: <span>${activity.time}</span></p>
                            <p>A partir de: <span>${activity.price}</span></p>
                            <div class="button-container" id="guidap-widget-btn">
                                ${activity.activityBtn}
                            </div>
                        </div>
                        <div class=" card parcours-img">
                            <img class="card-image" src="${activity.map}" alt="image du parcours ${activity.number}" width="auto">
                            <video style="display: none;" width="320px" class="responsive-video card-video" src="${activity.videosm}" title="video de présentation du parcours ${activity.number}"></video>
                        </div>
                    </div>
                    `;
                };
                const cardVideo = document.querySelector('.card-video');
                cardVideo.addEventListener('ended', (event) => {
                    cardVideo.style.display = 'none';
                    document.querySelector('.card-image').style.display = 'block';
                });
                setTimeout(() => {
                    const cardImage = document.querySelector('.card-image');
                    const cardVideo = document.querySelector('.card-video');
                    cardImage.style.display = 'none';
                    cardVideo.style.display = 'block';
                    cardVideo.play();
                }, 5000);
            }
        function buildImageArray() {
            fetch('./gallery.json') 
                .then(response => response.json())
                .then(data => {
                    data.sort(() => Math.random() - 0.5); 
                    const imagesArray = Array.from(data).slice(0, 6);
                    const galleryContainer= document.querySelector('.gallery-images');
                    imagesArray.forEach((image) => {
                        const imageElement = document.createElement('img');
                        imageElement.src = image.url;
                        imageElement.alt = image.alt;
                        imageElement.classList.add('gallery-image');
                        galleryContainer.appendChild(imageElement);
                    });
                    setInterval(() => randomizeImages(data), 5000);
                });
            }

        function randomizeImages(data) { 
            const galleryItems = document.querySelectorAll('.gallery-image');
            data.sort(() => Math.random() - 0.5); 
            const imagesArray = Array.from(data).slice(0, 6);
            galleryItems.forEach((item, index) => {
                item.classList.add('fade');
            });

            setTimeout(() => {
                galleryItems.forEach((item, index) => {
                    item.src = imagesArray[index].url;
                    item.alt = imagesArray[index].alt;
                    item.classList.remove('fade');
                });
            }, 700);
        }

        buildImageArray();
        const scrollUpButton = document.querySelector('.upbtn');
        scrollUpButton.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 0) {
                scrollUpButton.style.display = 'flex';
            } else {
                scrollUpButton.style.display = 'none';
            }
        });
        
    setTimeout(() => {
        const cardImage = document.querySelector('.card-image');
        const cardVideo = document.querySelector('.card-video');
        cardImage ? cardImage.style.display = 'none':null;
        cardVideo ? cardVideo.style.display = 'block': null;
        cardVideo ? cardVideo.load() : null;
        cardVideo ? cardVideo.play() : null;
        }, 3000);

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                const target = document.querySelector(this.getAttribute('href'));
                const headerOffset = 270; 

                window.scrollTo({
                    top: target.offsetTop - headerOffset,
                    behavior: 'smooth'
                });
            });
        });
        galleryClicker = document.querySelector(".gallery-images");
        galleryClicker.addEventListener('click', () => {
            openModal()
        });
        function openModal() {
            console.log("called")
            const modal = document.createElement('div');
            modal.classList.add('site-modal');
            modal.style.display = 'flex';
            modal.innerHTML = `
                <div class="site-modal-content">
                    <span class="close">&times;</span>                    
                </div>
            `;
            document.body.appendChild(modal);
            const closeButton = document.querySelector('.close');
            closeButton.addEventListener('click', () => {
                modal.remove();
            });
        }
        
       
    </script>
</body>
</html>